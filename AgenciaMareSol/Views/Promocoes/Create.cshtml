@model AgenciaMareSol.Models.Promocao

@{
    ViewData["Title"] = "Adicionar promoção";

}
<h1 class="text-center">Adicionar Promoção</h1>

<h4>Adicionar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataViagem" class="control-label"></label>
                <input asp-for="DataViagem" class="form-control" />
                <span asp-validation-for="DataViagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destino_Id" class="control-label"></label>
                <input asp-for="Destino_Id" class="form-control" />
                <span asp-validation-for="Destino_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-info" />
                <a asp-action="Index" button type="button" class="btn btn-success">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
