@model AgenciaMareSol.Models.Passagem

@{
    ViewData["Title"] = "Adicionar passagem";
}

<h1 class="text-center">Passagens</h1>

<h4>Adicione uma passagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contato_Id" class="control-label"></label>
                <input asp-for="Contato_Id" class="form-control" />
                <span asp-validation-for="Contato_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Promocao_Id" class="control-label"></label>
                <input asp-for="Promocao_Id" class="form-control" />
                <span asp-validation-for="Promocao_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-info" />
                <a asp-action="Index" button type="button" class="btn btn-success">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
